@inject IStringLocalizer<NavMenu> T

<MudNavMenu>
    <MudSpacer />

    <MudNavLink Icon="@Icons.Material.Filled.Dashboard" Href="/" Match="NavLinkMatch.All" Class="mb-4">@T["Dashboard"]</MudNavLink>

    <MudText Typo="Typo.caption" Class="ms-4"><b>@T["General"]</b></MudText>

    <AuthorizeView>
        <MudNavLink Icon="@Icons.Material.Filled.List" Href="/items">@T["Items"]</MudNavLink>
    </AuthorizeView>

    <MudNavLink Icon="@Icons.Material.Filled.List" Href="/worker">@T["Worker"]</MudNavLink>

    <AuthorizeView Roles="Administrator,Manager">
        <MudText Typo="Typo.caption" Class="ms-4 mt-4"><b>Administration</b></MudText>
        <MudNavLink Icon="@Icons.Material.Filled.Person" Href="/users">Users</MudNavLink>
    </AuthorizeView>

</MudNavMenu>